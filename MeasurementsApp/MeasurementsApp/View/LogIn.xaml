<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeasurementsApp.LogIn">
    <ContentPage.Content>
        <StackLayout Padding="40" HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <Entry x:Name="enteredName"  Placeholder="Username"></Entry>
            <Entry x:Name="enteredPassword" Placeholder="Password" IsPassword="True"></Entry>
            <Button VerticalOptions="Center" Text="Login" Clicked="Login_Clicked"></Button>
            <Label HorizontalOptions="Center" Text="Don't have an account?" TextColor="Gray" FontSize="Small"></Label>
            <Button VerticalOptions="Center" Text="Register" Clicked="Register_Clicked"></Button>
            
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>